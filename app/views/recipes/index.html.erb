<% provide(:title, t(:recipes)) %>
  <div class="center">
    <h1><%= t(:recipes) %></h1>
    <!--<p><%= "#{@recipes.size} #{t(:recipes)}" if @recipes %></p>-->
  </div>
  
  <%= render 'shared/advertise_row' %>

  <% if @recipes.size==0 %>
  	<span>Nenhuma receita encontrada. <%= link_to "Voltar", root_path %></span>
  <% else %>
    <ul class="thumbnails">
      <%= render @recipes.uniq %>
    </ul>
    <div class="center">
      <%= will_paginate @recipes %>
    </div>
  <% end %>


<%= render 'usersmarks/form' if signed_in? %>